<Window x:Class="ConwaysGameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game of Life" Height="350" Width="525" MinWidth="300" MinHeight="300">
	<Grid >
		<UniformGrid Name="UniformGrid" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="0,0,-10,31" MinWidth="50" MinHeight="50"  />
		<Label Name="ValueLabel" Content="{Binding ElementName=ValueSlider, Path=Value, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Bottom" RenderTransformOrigin="0.547,0.544" Height="29" Width="44" Margin="220,0,0,2" />
		<Slider   Name="ValueSlider"  Margin="250,0,0,8" VerticalAlignment="Bottom" Maximum="50" Minimum="2" SmallChange="1" IsSnapToTickEnabled="True" ValueChanged="ValueSlider_ValueChanged"/>
		<CheckBox Content="Class version"  Name="ClassVersion"  Margin="125,0,297,8" VerticalAlignment="Bottom" Height="18" IsChecked="True"  Click="ClassVersionClick" Checked="ClassVersionChecked" Unchecked="ClassVersionUnchecked"/>
		<CheckBox Content="Is game running" Name="IsGameRunning"  Margin="2,0,401,8" VerticalAlignment="Bottom"  Height="18" Checked="IsGameRunningChecked" Unchecked="IsGameRunningUnchecked"/>
	</Grid>
</Window>